<!--index.wxml-->
<view class="container">
  <!-- 首页 -->
  <view wx:if="{{tabbar1}}" class="index wexui-tabbar">
    <view class="header-bg tabbar-content" style="background-image:  url( /pages/images/header-bg.png); background-repeat:no-repeat;"> 
      <view class="header">
          <image class="header-logo" src="/pages/images/header-logo.png" />
      </view>
      <view class="wexui-searchbox searchinput">
          <view class="searchbox-input index-searchbox-input">
              <icon type="search" size="16" />
              <input type="text" placeholder="搜索零件名称"/>
          </view>
      </view>
      <view class="page-section page-section-spacing swiper">
        <swiper
          indicator-dots="true" autoplay="true" interval="3000" duration="2000"
            previous-margin="30px" next-margin="30px">
          <block wx:for="{{background}}" wx:key="*this">
            <swiper-item>
              <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>
            </swiper-item>
          </block>
        </swiper>
      </view>
      <view class="example-content">
        <view class="wexui-list list-active" style="background-color:#f1f1f1;">
            <view class="list-logo">
                <image style="width:25rpx;" src="../images/list-header.png" />
            </view>
            <view class="list-desc">产品应用平台</view>
        </view>
        <view class="wexui-grid" style="margin-left:20rpx;margin-right:20rpx;">
          <view wx:for="{{products}}" wx:for-index="idx" wx:for-item="product">
            <view class="grid-item"><image src="{{product.img}}" class="grid-item-icon"/><view class="grid-item-label">{{product.text}}</view>
            <view class="grid-item-des">{{product.des}}</view></view>
          </view>
        </view>
      </view>
      <view class="example-content">
        <view class="wexui-list list-active" style="background-color:#f1f1f1;">
            <view class="list-logo">
                <image style="width:25rpx;" src="../images/list-header.png" />
            </view>
            <view class="list-desc">主要产品类型</view>
        </view>
        <view class="wexui-grid-four" style="margin-left:20rpx;margin-right:20rpx;">
          <view wx:for="{{producttypes}}" wx:for-index="idx" wx:for-item="producttype">
            <view class="grid-item"><image src="{{producttype.img}}" class="grid-item-icon"/><view class="grid-item-label">{{producttype.text}}</view></view>
          </view>
        </view>
      </view>
    </view>
    <view class="tabbar-footer">
      <view class="{{tabbar1?'current':''}}" bindtap="tapTabbar1">
          <image src="/pages/images/home-check.png" wx:if="{{tabbar1}}"/>
          <image src="/pages/images/home.png" wx:else/>
      </view>
      <view class="{{tabbar2?'current':''}}" bindtap="tapTabbar2">
          <image src="/pages/images/product-check.png" wx:if="{{tabbar2}}"/>
          <image src="/pages/images/product.png" wx:else/>
      </view>
      <view class="{{tabbar3?'current':''}}" bindtap="tapTabbar3">
          <image src="/pages/images/my-check.png" wx:if="{{tabbar3}}"/>
          <image src="/pages/images/my.png" wx:else/>
      </view>
    </view>
  </view>
  <!-- 产品 -->
  <view wx:if="{{tabbar2}}" class="index wexui-tabbar">
    <view class="header-product-bg tabbar-content" style="background-color:#c60018; background-repeat:no-repeat;">
      <view class="wexui-searchbox searchinput">
          <view class="searchbox-input index-searchbox-input">
              <icon type="search" size="16" />
              <input type="text" placeholder="搜索零件名称"/>
          </view>
      </view>
      <view class="example-content">
        <view class="wexui-tabs">
            <scroll-view scroll-x="true">
                <view class="tabs-header">
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='0'?'current':''}}" bindtap="tapTabsDefault" data-id="0">全部</view>
                    </view>
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='1'?'current':''}}" bindtap="tapTabsDefault" data-id="1">客车(动车组)</view>
                    </view>
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='2'?'current':''}}" bindtap="tapTabsDefault" data-id="2">地铁</view>
                    </view>
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='3'?'current':''}}" bindtap="tapTabsDefault" data-id="3">机车</view>
                    </view>
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='4'?'current':''}}" bindtap="tapTabsDefault" data-id="4">轻轨</view>
                    </view>
                    <view class="tabs-item">
                        <view class="tabs-title {{tabIndex=='5'?'current':''}}" bindtap="tapTabsDefault" data-id="5">其他</view>
                    </view>
                </view>
            </scroll-view>
            <view class="tabs-content">
                <view wx:if="{{tabIndex == '0'}}">
                  <view class="example-content">
                    <view class="wexui-grid-four" style="margin-left:20rpx;margin-right:20rpx;">
                      <view wx:for="{{allproducttypes}}" wx:for-index="idx" wx:for-item="producttype">
                        <view class="grid-item"><image src="{{producttype.img}}" class="grid-item-icon"/><view class="grid-item-label">{{producttype.text}}</view></view>
                      </view>
                    </view>
                  </view>
                </view>
                <view wx:if="{{tabIndex == '1'}}">内容2</view>
                <view wx:if="{{tabIndex == '2'}}">内容3</view>
                <view wx:if="{{tabIndex == '3'}}">内容4</view>
                <view wx:if="{{tabIndex == '4'}}">内容5</view>
                <view wx:if="{{tabIndex == '5'}}">内容6</view>
            </view>
        </view>
      </view>
    </view>
    <view class="tabbar-footer">
      <view class="{{tabbar1?'current':''}}" bindtap="tapTabbar1">
          <image src="/pages/images/home-check.png" wx:if="{{tabbar1}}"/>
          <image src="/pages/images/home.png" wx:else/>
      </view>
      <view class="{{tabbar2?'current':''}}" bindtap="tapTabbar2">
          <image src="/pages/images/product-check.png" wx:if="{{tabbar2}}"/>
          <image src="/pages/images/product.png" wx:else/>
      </view>
      <view class="{{tabbar3?'current':''}}" bindtap="tapTabbar3">
          <image src="/pages/images/my-check.png" wx:if="{{tabbar3}}"/>
          <image src="/pages/images/my.png" wx:else/>
      </view>
    </view>
  </view>
  <!-- 我们 -->
  <view wx:if="{{tabbar3}}" class="index wexui-tabbar" style="background-color:white;">
    <view class="example-content" style="margin-top:20rpx;">
      <view class="wexui-list wexui-list-my list-active">
          <view class="list-logo">
              <image style="width:25rpx;" src="../images/list-header.png" />
          </view>
          <view class="list-desc">公司简介</view>
      </view>
      <view class="we-header-view">
        <image class="we-header-img" src="/pages/images/we-header.png" />
      </view>
      <view class="wexui-article">
        <view class="article-section">
            <view class="article-section-content">
                <view class="article-section-text">
                    株洲时代新材料科技股份有限公司是中国中车旗下株洲电力机车研究所有限公司控股的A股上市企业，是中国中车的新材料产业平台。始建于1984年，其前身为原铁道部株洲电力机车研究所橡胶试验室，2002年12月在上海证券交易所上市。2014年9月，成功并购德国ZF集团旗下橡胶与塑料业务（博戈公司）。根据美国《橡胶和塑料新闻》周刊披露，时代新材已成为全国第一、全球第15名的非轮胎橡胶制品生产商。
                </view>
            </view>
        </view>
      </view>
      <view class="wexui-list wexui-list-my list-active">
          <view class="list-logo">
              <image style="width:25rpx;" src="../images/list-header.png" />
          </view>
          <view class="list-desc">公司荣誉</view>
      </view>
      <view class="we-title">公司获奖情况（部分）</view>
      <view class="example-content">
        <view wx:for="{{awards}}" wx:for-index="idx" wx:for-item="award">
          <view class="wexui-panel">
                <view class="panel-content">
                    <view class="panel-title">{{award.awardTitle}}</view>
                    <view class="panel-desc">{{award.awardDesc}}</view>
                </view>
          </view>
        </view>
      </view>
      <view class="wexui-article">
        <view class="article-section">
            <view class="article-section-image">
                <image src="/pages/images/we-company.png"  />
            </view>
        </view>
      </view>
      <view class="example-content">
        <view class="wexui-list wexui-list-my">
            <view class="we-list-logo we-list-addr">
                <image src="/pages/images/we-addr.png" />
            </view>
            <view class="we-list-desc">湖南省株洲市天元区海天路18号</view>
        </view>
        <view class="wexui-list wexui-list-my">
            <view class="we-list-logo">
                <image src="/pages/images/we-email.png" />
            </view>
            <view class="we-list-desc">tmt@teg.cn</view>
        </view>
        <view class="wexui-list wexui-list-my">
            <view class="we-list-logo">
                <image src="/pages/images/we-phone.png" />
            </view>
        </view>
        <view class="we-phone-content">
            <view class="wexui-panel">
                  <view class="panel-content">
                      <view class="panel-phone" wx:for="{{phones}}" wx:for-index="idx" wx:for-item="phone">
                        <view class="panel-phonetype">{{phone.phonetype}}</view>
                        <view class="panel-phonenum">{{phone.phonenum}}</view>
                      </view>
                  </view>
            </view>
        </view>
      </view>
      <view class="wexui-list wexui-list-my list-active">
          <view class="list-logo">
              <image style="width:25rpx;" src="../images/list-header.png" />
          </view>
          <view class="list-desc">客户留言</view>
      </view>
      <view class="example-content">
        <view class="input-group margin-top-10">
            <label class="input-label">单位</label>
            <input class="input-text" type="text" placeholder="请输入"  />
        </view>
        <view class="input-group margin-top-10">
            <label class="input-label">姓名</label>
            <input class="input-text" type="text" placeholder="请输入"  />
        </view>
        <view class="input-group margin-top-10">
            <label class="input-label">电话</label>
            <input class="input-text" type="text" placeholder="请输入"  />
        </view>
        <view class="input-group margin-top-10">
            <label class="input-label">邮箱</label>
            <input class="input-text" type="text" placeholder="请输入"  />
        </view>
        <view class="input-textarea margin-top-10">
            <textarea placeholder="请输入内容" maxlength="-1"  />
        </view>
        <view class="btn btn-success size-big btn-block">提交</view>
      </view>
    </view>
    <view class="tabbar-footer">
      <view class="{{tabbar1?'current':''}}" bindtap="tapTabbar1">
          <image src="/pages/images/home-check.png" wx:if="{{tabbar1}}"/>
          <image src="/pages/images/home.png" wx:else/>
      </view>
      <view class="{{tabbar2?'current':''}}" bindtap="tapTabbar2">
          <image src="/pages/images/product-check.png" wx:if="{{tabbar2}}"/>
          <image src="/pages/images/product.png" wx:else/>
      </view>
      <view class="{{tabbar3?'current':''}}" bindtap="tapTabbar3">
          <image src="/pages/images/my-check.png" wx:if="{{tabbar3}}"/>
          <image src="/pages/images/my.png" wx:else/>
      </view>
    </view>
  </view>
</view>